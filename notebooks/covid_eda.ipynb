import pandas as pd
import matplotlib.pyplot as plt

# Load dataset
df = pd.read_csv("../data/owid-covid-data.csv", low_memory=False)

# Initial validation
print(df.shape)

# View basic info
df.info()

# Display first rows
df.head()

# Filter rows for South Africa using .loc and .copy() to avoid warnings
sa = df.loc[df["location"] == "South Africa"].copy()

# Convert date column safely
sa.loc[:, "date"] = pd.to_datetime(sa["date"], errors="coerce")

sa.head()

# Select medical columns
medical_cols = [
    "date", "total_cases", "new_cases",
    "total_deaths", "new_deaths",
    "hosp_patients", "icu_patients",
    "people_vaccinated"
]

# Keep only medical columns that actually exist
medical_cols = [col for col in medical_cols if col in sa.columns]

sa = sa[medical_cols]

# Handle missing values
sa = sa.fillna(0)

sa.head()

# This will create a visualization
plt.figure()
plt.plot(sa["date"], sa["total_cases"])
plt.title("Total COVID-19 Cases in South Africa")
plt.xlabel("Date")
plt.ylabel("Total Cases")
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

# Avoid division by zero
# This computes the case fatality ratio (CFR)

sa["mortality_rate"] = (sa["total_deaths"] / sa["total_cases"]) * 100
sa["mortality_rate"] = sa["mortality_rate"].replace([float("inf")], 0)

sa[["date", "total_cases", "total_deaths", "mortality_rate"]].tail()

# Plot mortality rate over time
plt.figure()
plt.plot(sa["date"], sa["mortality_rate"])
plt.title("COVID-19 Mortality Rate (%) in South Africa")
plt.xlabel("Date")
plt.ylabel("Mortality Rate (%)")
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

# Provides a statistical summary
sa["mortality_rate"].describe()
